{
  "manifest_version": 3,
  "name": "AntiShort",
  "version": "1.0",
  "description": "Automatically hides Shorts from your YouTube feed and video sidebar.",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "assets/icon.png"
  }
}
